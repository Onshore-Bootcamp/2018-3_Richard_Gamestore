@using Gamestore_MVC.Models
@model Game
@{
    ViewBag.Title = "GameDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="jumbotron">

    <h2 class="align-center">GameDetails</h2>
    <table class="table">
        <thead>
            <tr>
                <th>
                    Title
                </th>
                <th>
                    Description
                </th>
                <th>
                    Developing Company
                </th>
                <th>
                    Condition of Game
                </th>
                <th>
                    Price
                </th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>
                    @Model.Title
                </td>
                <td>
                    @Model.Description
                </td>
                <td>
                    @Model.DevelopingCompany
                </td>
                <td>
                    @Model.Condition
                </td>
                <td>
                    @Model.Price
                </td>
                @if ((long)Session["RoleId"] >= 3)
                {
                    <td>
                        @Html.ActionLink("Edit Game", "UpdateGame", "Game", new { GameId = Model.GameId }, null)
                    </td>
                }
                @if ((long)Session["RoleId"] == 5)
                {
                    <td>
                        @Html.ActionLink("Delete Game", "Delete", "Game", new { GameId = Model.GameId }, new { onclick = "return confirm(' are you sure')" })
                    </td>
                }

            </tr>
        </tbody>
    </table>
    @Html.ActionLink("Return to game selection", "ViewAllGames", "Game", null, null)
</div>



