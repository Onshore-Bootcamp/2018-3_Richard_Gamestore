<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("VideoGame World ∞", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">

                <ul class="nav navbar-nav">

                    @if (!(Session["RoleId"] == null))
                    {
                        if ((long)Session["RoleId"] == 5)
                        {
                            <li>@Html.ActionLink("View Orders", "ViewOrder", "Order") </li>
                            <li>@Html.ActionLink("Add Game", "AddGame", "Game")</li>
                            <li>@Html.ActionLink("View Users", "AllUsers", "Account") </li>


                        }


                    }
                    @if (Session["RoleId"] == null)
                    {
                        <li>@Html.ActionLink("Home", "Index", "Home")</li>
                        <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                        <li>@Html.ActionLink("Games", "ViewAllGames", "Game")</li>
                        <li>@Html.ActionLink("View Cart", "ViewCart", "Cart")</li>
                    }
                    @if ((long?)Session["RoleId"] >= 1)
                    {
                        <li>@Html.ActionLink("Home", "Index", "Home")</li>
                        <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                        <li>@Html.ActionLink("Games", "ViewAllGames", "Game")</li>
                        <li>@Html.ActionLink("View Cart", "ViewCart", "Cart")</li>
                    }
                </ul>
                <ul class="nav navbar-nav navbar-right">

                    @if (Session["RoleId"] == null)
                    {
                        <li>@Html.ActionLink("Login", "Login", "Account")</li>
                        <li>@Html.ActionLink("Register", "Register", "Account")</li>
                       

                    }
                    @if (Session["RoleId"] != null && (long)Session["RoleId"] >= 1)
                    {
                        <li>@Html.ActionLink("Hello " + Session["UserName"].ToString(), "", "")</li>

                        <li>  @Html.ActionLink("LogOut", "LogOut", "Account")</li>
                    }
                </ul>
                 



                
              

            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
